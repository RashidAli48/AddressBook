<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Directory"
        android:textStyle="bold|italic"
        android:id="@+id/pDId"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textColorLink="#0a0101"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"

        android:text="Add Contact"
        android:id="@+id/addContactButtonId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35sp"
        android:layout_alignRight="@+id/delButtonId"
        android:layout_alignEnd="@+id/delButtonId"
        android:textColor="#010101"
        android:layout_below="@+id/pDId"
        android:onClick="addClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"

        android:text="Delete Contact"
        android:id="@+id/delButtonId"
        android:layout_marginTop="170sp"
        android:textColor="#010101"
        android:layout_below="@+id/addDataButtonId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="deleteClicked"
        android:nestedScrollingEnabled="true" />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="View Contacts"
        android:id="@+id/findButtonId"
        android:layout_marginTop="58sp"
        android:textColor="#010101"
        android:layout_below="@+id/delButtonId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/delButtonId"
        android:layout_alignEnd="@+id/delButtonId"
        android:onClick="viewClicked" />

</RelativeLayout>
